{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": ["dist", "examples", "coverage", "node_modules"]
    },
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noExcessiveCognitiveComplexity": "error",
                "noForEach": "warn",
                "noUselessLoneBlockStatements": "error"
            },
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error",
                "useExhaustiveDependencies": "warn"
            },
            "style": {
                "useNamingConvention": "off",
                "noNegationElse": "warn",
                "useImportType": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn",
                "noArrayIndexKey": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    }
}
